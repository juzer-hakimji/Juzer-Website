@model  ViewModel.AnalysisVM

@section styles
{
    @Styles.Render("~/StyleBundle/Analysis")
}

<div class="cd-user-modal">
    <!-- this is the entire modal form, including the background -->
    <div class="cd-user-modal-container">
        <ul class="cd-switcher">
            <li><a href="#0">Make Admin</a></li>
            <li><a href="#0">Remove Admin</a></li>
        </ul>
        <!-- Add Admin form -->
        @Html.Partial("_AddAdmin")
        <!-- cd-AddAdmin-->
        <!-- Remove Admin form -->
        @Html.Partial("_RemoveAdmin", Model)
        <!-- cd-RemoveAdmin-->
        <a href="#0" class="cd-close-form">Close</a>
    </div>
    <!-- cd-user-modal-container -->
</div>

<div class="Top-Content-Padding">
    <div class="row">
        <div class="jumbotron ml-auto">
            <span><a id="RemoveAdmin" class="btn btn-danger pull-right" href="#0">Remove Admin</a></span>
            <span><a id="AddAdmin" class="btn btn-success pull-right" href="#0">Make Admin</a></span>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/ScriptBundle/Analysis")
}
