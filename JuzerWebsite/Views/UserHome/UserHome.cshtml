@model  ViewModel.UserHomeVM

@{
    ViewBag.Title = "UserHome";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles
{
    @*<link href="~/Content/DataTables/css/jquery.dataTables.css" rel="stylesheet" />*@
    @Styles.Render("~/StyleBundle/UserHome")
}

<div class="Top-Content-Padding">
    <div class="page-header">
        <h2>Incomes & Expenses Comparison</h2>
    </div>
</div>
<div>
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#Month">This Month</a></li>
        <li><a data-toggle="tab" href="#Year">This Year</a></li>
    </ul>

    <div class="tab-content">
        <div id="Month" class="tab-pane fade in active">
            <div class="chart-container">
                <canvas id="MonthChart"></canvas>
            </div>
        </div>
        <div id="Year" class="tab-pane fade">
            <div class="chart-container">
                <canvas id="YearChart"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="Top-Content-Padding">
    <div class="page-header">
        <h2>Important Notes List</h2>
    </div>
</div>
<div>
    <table id="tblImpNotesList" class="display">
        <thead>
            <tr>
                <th>Date</th>
                <th>Subject</th>
                <th>Note</th>
            </tr>
        </thead>
    </table>
</div>

@section scripts
{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    @Scripts.Render("~/ScriptBundle/UserHome")
