@model ViewModel.BaseViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title</title>
    <link href='https://fonts.googleapis.com/css?family=PT+Sans:400,700' rel='stylesheet' type='text/css'>
    @Styles.Render("~/StyleBundle/Layout")
    @RenderSection("styles", false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Juzer Website", "List", "Notes", new { area = "" }, new { @class = "navbar-brand" })
                <a class="navbar-brand pull-right" href="#">Hi @Model.FirstName</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ml-auto">
                    <li><a href="/Notes/List">Notes</a></li>
                    <li><a href="/Spending/List">Spending</a></li>
                    <li style="display:@(Convert.ToBoolean(Session["IsAdmin"]) ? "inline" : "none")"><a href="/Analysis/Index">Analysis</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Profile <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="/User/ChangePassword">Change Password</a></li>
                            <li><a href="/User/Delete">Delete Account</a></li>
                            <li><a href="/Authentication/LogOut">Log Out</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Copyright &copy; @Model.Year - Developed and managed by @Model.DeveloperName</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.5/umd/popper.min.js"></script>
    @Scripts.Render("~/ScriptBundle/Layout")
    @RenderSection("scripts", required: false)
</body>
</html>
