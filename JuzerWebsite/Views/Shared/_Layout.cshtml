@model ViewModel.BaseViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title</title>
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", false)
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/HomePage/animate.css">
    <link rel="stylesheet" href="~/Content/HomePage/magnific-popup.css">
    <link rel="stylesheet" href="~/Content/HomePage/font-awesome.min.css">
    @*<link href='https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' rel='stylesheet' type='text/css'>*@
    <link href='https://fonts.googleapis.com/css?family=PT+Sans:400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://s3-us-west-2.amazonaws.com/s.cdpn.io/148866/reset.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
    <link href="~/Content/CustomCss/Common.css" rel="stylesheet" />
    <link href="~/Content/HomePage/style.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "List", "Notes", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ml-auto">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    @*<li><a href="Home/Index">Home</a></li>*@
                    @*<li><a href="#">Spending</a></li>*@
                    <li><a href="/Notes/List">Notes</a></li>
                    <li style="display:@(Convert.ToBoolean(Session["IsAdmin"]) ? "inline" : "none")"><a href="/Analysis/Index">Analysis</a></li>
                    <li class="dropdown">
                        @*@Html.ActionLink("Profile", "Index", "Analysis")<b class="caret"></b>*@
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Profile <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="/User/ChangePassword">Change Password</a></li>
                            <li><a href="/User/Delete">Delete Account</a></li>
                            @*<li>@Html.ActionLink("Log Out", "LogOut", "Authentication",new { area = "" },null)</li>*@
                            <li><a href="/Authentication/LogOut">Log Out</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @Model.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @*    <script src="~/Scripts/popper.js"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.5/umd/popper.min.js"></script>
    @*<script src="~/Scripts/popper.min.js"></script>*@
    @*@Scripts.Render("~/bundles/bootstrap")*@
    <script src="https://kit.fontawesome.com/6f0a81b667.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootbox.min.js"></script>
    <script src="~/Scripts/HomePage/smoothscroll.js"></script>
    <script src="~/Scripts/HomePage/jquery.magnific-popup.min.js"></script>
    <script src="~/Scripts/HomePage/magnific-popup-options.js"></script>
    <script src="~/Scripts/HomePage/wow.min.js"></script>
    <script src="~/Scripts/bootstrap-notify.min.js"></script>
    <script src="~/Scripts/CustomJSScripts/Common.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript"></script>
    @*  <script src="~/Scripts/jquery-3.4.1.min.js"></script>*@
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
