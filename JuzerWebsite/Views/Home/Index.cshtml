@model ViewModel.MainUserVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8">
    <title>Juzer Hakimji-Welcome</title>
    <meta name="description" content="This is a personal website of Juzer Hakimji that describes his skills as web developer , his hobbies and more">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    @*<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=PT+Sans:400,700' type='text/css">*@
    @Styles.Render("~/StyleBundle/HomePage")
</head>
<body data-spy="scroll" data-target=".navbar-collapse" data-offset="50">
    <!-- PRE LOADER -->
    <div class="preloader">
        <div class="spinner">
            <span class="spinner-rotate"></span>
        </div>
    </div>
    <!-- NAVIGATION SECTION -->
    <div class="navbar custom-navbar navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                </button>
                <!-- lOGO TEXT HERE -->
                <a href="index.html" class="navbar-brand">Juzer Hakimji</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a class="" href="#home">Home</a></li>
                    <li><a class="" href="#about">About Juzer Hakimji</a></li>
                    <li><a class="" href="#work">About this website</a></li>
                    <li><a class="" href="#contact">Contact</a></li>
                    <li><a class="UserPopUp" href="#">Sign in/Sign up</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="cd-user-modal">
        <!-- this is the entire modal form, including the background -->
        <div class="cd-user-modal-container">
            <!-- this is the container wrapper -->
            <ul class="cd-switcher">
                <li><a href="#0">Sign in</a></li>
                <li><a href="#0">New account</a></li>
            </ul>
            <!-- log in form -->
            @Html.Partial("_Login", Model.UserLoginVM)
            <!-- cd-login -->
            <!-- sign up form -->
            @Html.Partial("_SignUp", Model.UserDetailsVM)
            <!-- cd-signup -->
            <!-- reset password form -->
            @Html.Partial("_ResetPassword", Model.ResetPasswordVM)
            <!-- cd-reset-password -->
            <a href="#0" class="cd-close-form">Close</a>
        </div>
        <!-- cd-user-modal-container -->
    </div>
    <!-- cd-user-modal -->
    <!-- HOME SECTION -->
    <section id="home">
        <div class="container">
            <div class="row">
                <div class="col-md-offset-1 col-md-2 col-sm-3">
                    <img src="~/Content/Images/Juzer-Hakimji.jpg" class="wow fadeInUp img-responsive img-circle" data-wow-delay="0.2s" alt="Juzer Hakimji">
                </div>
                <div class="col-md-8 col-sm-8">
                    <h1 class="wow fadeInUp" data-wow-delay="0.6s">Hey there, My name is Juzer Hakimji and I'm a Web Developer.</h1>
                    <a href="/Home/DownloadResume" target="_blank" class="wow fadeInUp btn btn-default section-btn" data-wow-delay="1s">Download Resume</a>
                </div>
            </div>
        </div>
    </section>
    <!-- ABOUT SECTION -->
    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-sm-12">
                    <div class="about-thumb">
                        <div class="wow fadeInUp section-title" data-wow-delay="0.6s">
                            <h2>A Little Bit Of My Story</h2>
                            <p><strong>Senior Developer at <a href="https://www.intelliswift.com/" target="_blank" rel="noreferrer">Intelliswift Software Inc</a></strong></p>
                        </div>
                        <div class="wow fadeInUp" data-wow-delay="0.8s">
                            <p>I have extensive experience in designing and developing enterprise-scale applications.</p>
                        </div>
                        <ul class="social-icon">
                            <li class="wow fadeInLeft" data-wow-delay="1s"><a href="https://twitter.com/juzer_hakimji" class="fa fa-twitter" target="_blank" rel="noreferrer"></a></li>
                            <li class="wow fadeInUp" data-wow-delay="1.2s"><a href="https://www.linkedin.com/in/juzer-hakimji-685293143" class="fa fa-linkedin" target="_blank" rel="noreferrer"></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12">
                    <div class="wow fadeInUp" data-wow-delay="0.4s">
                        <h2>Hobbies</h2>
                    </div>
                    <div class="wow fadeInUp" data-wow-delay="0.6s">
                        <a href="#">
                            <img src="~/Content/Images/Travelling.jpg" class="img-responsive" alt="Travelling">
                        </a>
                        <a href="#">
                            <img src="~/Content/Images/Football.jpg" class="img-responsive" alt="Football">
                        </a>
                        <a href="#">
                            <img src="~/Content/Images/BikeRides.jpg" class="img-responsive" alt="Bike Rides">
                        </a>
                        <a href="#">
                            <img src="~/Content/Images/WatchingMovies.jpg" class="img-responsive" alt="Watching Movies">
                        </a>
                        <a href="#">
                            <img src="~/Content/Images/camping.jpg" class="img-responsive" alt="Camping">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- SKILL SECTION -->
    <section id="skill">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-sm-6">
                    <div class="wow fadeInUp section-title" data-wow-delay="0.2s">
                        <h2>Expertise</h2>
                        <p>I am a full stack developer with expertise in microsoft technologies and Angular.</p>
                    </div>
                </div>
                <div class="col-md-offset-1 col-md-6 col-sm-6">
                    <div class="skill-thumb">
                        <div class="wow fadeInUp" data-wow-delay="1s">
                            <strong>Asp.net MVC</strong>
                            <span class="pull-right">95%</span>
                            <div class="progress">
                                <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="95" aria-valuemin="0" aria-valuemax="100" style="width: 90%;"></div>
                            </div>
                        </div>
                        <div class="wow fadeInUp" data-wow-delay="1s">
                            <strong>Angular 2+</strong>
                            <span class="pull-right">95%</span>
                            <div class="progress">
                                <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="95" aria-valuemin="0" aria-valuemax="100" style="width: 90%;"></div>
                            </div>
                        </div>
                        <div class="wow fadeInUp" data-wow-delay="1.2s">
                            <strong>SQL Server</strong>
                            <span class="pull-right">100%</span>
                            <div class="progress">
                                <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 100%;"></div>
                            </div>
                        </div>
                        <div class="wow fadeInUp" data-wow-delay="1.2s">
                            <strong>.Net Core mvc and Web Api</strong>
                            <span class="pull-right">95%</span>
                            <div class="progress">
                                <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="95" aria-valuemin="0" aria-valuemax="100" style="width: 90%;"></div>
                            </div>
                        </div>
                        <div class="wow fadeInUp" data-wow-delay="1.4s">
                            <strong>Front End - Javascript,Html,Css</strong>
                            <span class="pull-right">95%</span>
                            <div class="progress">
                                <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="95" aria-valuemin="0" aria-valuemax="100" style="width: 90%;"></div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- WORK SECTION -->
    <section id="work">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="wow fadeInUp section-title" data-wow-delay="0.2s">
                        <h2>About this website</h2>
                        <p>After signing up you can create notes, list your incomes and expenses and manage them by comparing them using graphs.</p>
                    </div>
                </div>
                <div class="wow fadeInUp col-md-3 col-sm-6" data-wow-delay="0.4s">
                    <!-- WORK THUMB -->
                    <div class="work-thumb">
                        <a href="~/Content/Images/Notes.jpg" class="image-popup">
                            <img src="~/Content/Images/Notes.jpg" class="img-responsive" alt="Notes">
                        </a>
                    </div>
                    <h4>Create Notes</h4>
                </div>
                <div class="wow fadeInUp col-md-3 col-sm-6" data-wow-delay="0.6s">
                    <!-- WORK THUMB -->
                    <div class="work-thumb">
                        <a href="~/Content/Images/IncomesAndExpenses.jpg" class="image-popup">
                            <img src="~/Content/Images/IncomesAndExpenses.jpg" class="img-responsive" alt="Incomes and Expenses">
                        </a>
                    </div>
                    <h4>Create Incomes and Expenses</h4>
                </div>
                <div class="wow fadeInUp col-md-3 col-sm-6" data-wow-delay="0.8s">
                    <!-- WORK THUMB -->
                    <div class="work-thumb">
                        <a href="~/Content/Images/Graphs.jpg" class="image-popup">
                            <img src="~/Content/Images/Graphs.jpg" class="img-responsive" alt="Graphs">
                        </a>
                    </div>
                    <h4>Compare using Graphs</h4>
                </div>
                <div class="wow fadeInUp col-md-3 col-sm-6" data-wow-delay="0.8s">
                    <!-- WORK THUMB -->
                    <div class="work-thumb">
                        <a href="~/Content/Images/ImportantNote.jpg" class="image-popup">
                            <img src="~/Content/Images/ImportantNote.jpg" class="img-responsive" alt="Important Note">
                        </a>
                    </div>
                    <h4>Important Notes and I&E comparison at one place</h4>
                </div>
            </div>
        </div>
    </section>
    <!-- CONTACT SECTION -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="wow fadeInUp section-title" data-wow-delay="0.2s">
                        <h2>You got projects?</h2>
                        <p>Let me help you solve your problems.</p>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12">
                    <!-- CONTACT FORM HERE -->
                    @Html.Partial("_ContactInfo", Model.ContactVM)
                </div>
            </div>
        </div>
    </section>
    <!-- SCRIPTS -->
    @Scripts.Render("~/ScriptBundle/HomePage")
</body>
</html>
