@model ViewModel.ResetPasswordVM

<div id="cd-reset-password">
    <!-- reset password form -->
    <p class="cd-form-message">
        Lost your password? Please enter your email address. You will receive a new password.
    </p>
    <form class="cd-form" id="cd-form-ResetPass">
        <p class="fieldset">
            <label class="image-replace cd-email" for="reset-email">
                E-mail
            </label>
            @Html.TextBoxFor(x => x.ResetEmail, new { @class = "full-width has-padding has-border", placeholder = "E-mail" })
            @Html.ValidationMessageFor(x => x.ResetEmail, null, new { @class = "cd-error-message" })
        </p>
        <p class="fieldset">
            <input class="full-width has-padding" id="btnResetPass" type="submit" value="Reset password">
        </p>
    </form>
    <p class="cd-form-bottom-message">
        <a href="#0">Back to log-in</a>
    </p>
</div>
