@model ViewModel.ResetPasswordVM

<div id="cd-reset-password">
    <!-- reset password form -->
    <p class="cd-form-message">
        Lost your password? Please enter your email address. You will receive a link to
        create a new password.
    </p>
    <form class="cd-form" id="cd-form-ResetPass">
        <p class="fieldset">
            <label class="image-replace cd-email" for="reset-email">
                E-mail
            </label>
            @*<input class="full-width has-padding has-border" id="reset-email" type="email" placeholder="E-mail">
                <span class="cd-error-message">Error message here!</span>*@
            @Html.TextBoxFor(x => x.ResetEmail, new { @class = "full-width has-padding has-border" })
            @Html.ValidationMessageFor(x => x.ResetEmail, null, new { @class = "cd-error-message" })
        </p>
        <p class="fieldset">
            @*<input class="full-width has-padding" type="submit" value="Reset password">*@
            @*<button type="submit" id="btnLogin" class="full-width has-padding">Login</button>*@
            <button id="btnResetPass" class="full-width has-padding">Reset password</button>
        </p>
    </form>
    <p class="cd-form-bottom-message">
        <a href="#0">Back to log-in</a>
    </p>
</div>
