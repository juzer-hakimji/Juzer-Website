@model  ViewModel.NotesVM

@{
    ViewBag.Title = "Notes";
}

@section styles
{
    <link href="~/Content/css/all.css" rel="stylesheet" />
    @Styles.Render("~/StyleBundle/Notes")
}

<div class="cd-user-modal">
    <!-- this is the entire modal form, including the background -->
    <div class="cd-user-modal-container">
        <!-- this is the container wrapper -->
        <ul class="cd-switcher">
            <li><a href="#0">Add Note</a></li>
        </ul>
        <!-- sign up form -->
        @Html.Partial("_AddNote", Model)
        <!-- cd-signup -->
        <a href="#0" class="cd-close-form">Close</a>
    </div>
    <!-- cd-user-modal-container -->
</div>
<div class="Top-Content-Padding">
    <div class="jumbotron ml-auto">
        <h4>Here you can create your own notes ,Edit them,Delete them and also mark them important.</h4>
        <h3><a id="AddNote" class="btn btn-primary pull-right" href="#0">Add Note</a></h3>
    </div>
</div>
<div>
    <table id="tblNotesList" class="display">
        <thead>
            <tr>
                <th>Action</th>
                <th>Imps</th>
                <th>Date</th>
                <th>Subject</th>
                <th>Note</th>
            </tr>
        </thead>
    </table>
</div>



@section scripts
{
    @Scripts.Render("~/ScriptBundle/Notes")
}
